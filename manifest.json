{
  "manifest_version": 2,

  "name": "ChatGPT for Math",
  "short_name": "ChatMath",
  "author": "Qiao",
  "description": "A plugin to enhance the experience of ChatGPT for math",
  "version": "1.0.0",

  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "img/browser38.png",
      "19": "img/browser19.png"
    },
    "default_title": "ChatGPT for Math"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/chat*"
      ],
      "all_frames": true,
      "js": ["scripts/texify.js",
              "scripts/content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },

  "permissions": [    
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "runtime",
    "storage", 
    "activeTab", 
    "tabs"
  ],

  "web_accessible_resources" : ["scripts/pageScript.js",
                                "scripts/toolbar.js"]
}
